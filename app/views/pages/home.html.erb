
<div class="outer-div" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2))">
    <%= video_tag "atvjumps.mp4",class: "video-element", autoplay: true, loop: true,muted: true %>
    <div class="home-txt-container">
      <h1 id="home-txt">Rent ATVs</h1>
      <h3 id="home-txt2">anytime, anywhere</h3>
    </div>
</div>


<div class="container">
  <div id="txt-container">
      <h3>NATIONWIDE</h3>
      <h3>AMAZING CHOICES</h3>
      <h3>EXCITING</h3>
  </div>

  <div class="list-container">
    <div id="mobile">
      <i class="fas fa-mobile-alt"></i>
      <h4>Go Mobile</h4>
      <h6>Manage Your Booking Logs from your mobile phone</h6>
    </div>
    <div id="choice">
      <i class="fas fa-search-plus"></i>
      <h4>Wide Range of Choices</h4>
      <h6>Easily browse all ATVs by Make or Model</h6>
    </div>
    <div id="request">
      <i class="fas fa-book"></i>
      <h4>Bookings Made Easy</h4>
      <h6>Verify who is looking to book your ATV with one click</h6>
    </div>
  </div>

<!-- Slideshow container -->
<div class="atv-specs-container">
  <div class="slideshow-container">

    <!-- Full-width images with number and caption text -->
    <div class="mySlides _fade" style="background-image: url('<%= image_path "atvrider4.jpg" %>')">
      <div class="numbertext">1 / 3</div>

      <div class="slide-text"><strong>YAMAHA</strong></div>
    </div>

    <div class="mySlides _fade" style="background-image: url('<%= image_path "atvrider1.jpg" %>')">
      <div class="numbertext">2 / 3</div>

      <div class="slide-text"><strong>KAWASKI</strong></div>
    </div>

    <div class="mySlides _fade" style="background-image: url('<%= image_path "atvrider5.jpg" %>')">

      <div class="numbertext">3 / 3</div>
      <div class="slide-text"><strong>SUZUKI</strong></div>
    </div>

      <!-- Next and previous buttons -->
      <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
      <a class="next" onclick="plusSlides(1)">&#10095;</a>
    <div style="text-align:center">
      <span class="dot" onclick="currentSlide(1)"></span>
      <span class="dot" onclick="currentSlide(2)"></span>
      <span class="dot" onclick="currentSlide(3)"></span>
    </div>

  </div>
    <div class="atv-specs">
        <h3><strong>All-Terrain Vehicles</strong></h3>
      <ul>
        <li><h6>MAX Speed Mode</h6></li>
        <li><h6>Durable Suspensions</h6></li>
        <li><h6>Low-Fuel Consumption</h6></li>
        <li><h6>Off-Road Capabilities</h6></li>
      </ul>
    </div>
</div>


<div id="txt-footer">
  <h6><strong><%= link_to "BOOK YOUR ATV NOW", new_atv_path%></strong></h6>
</div>
  <!-- The dots/circles -->

  <script>
  var slideIndex = 1;
  showSlides(slideIndex);

  // Next/previous controls
  function plusSlides(n) {
    showSlides(slideIndex += n);
  }

  // Thumbnail image controls
  function currentSlide(n) {
    showSlides(slideIndex = n);
  }

  function showSlides(n) {
    var i;
    var slides = document.getElementsByClassName("mySlides");
    var dots = document.getElementsByClassName("dot");
    if (n > slides.length) {slideIndex = 1}
    if (n < 1) {slideIndex = slides.length}
    for (i = 0; i < slides.length; i++) {
        slides[i].style.display = "none";
    }
    for (i = 0; i < dots.length; i++) {
        dots[i].className = dots[i].className.replace(" active", "");
    }
    slides[slideIndex-1].style.display = "block";
    dots[slideIndex-1].className += " active";
  }
  </script>
</div>
